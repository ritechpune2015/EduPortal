@model Subject
<div class="col-lg-6">

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Edit</h5>
            <div>
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-info">@ViewBag.Message</div>
                }

            </div>
            <!-- Vertical Form -->
            <form class="row g-3" asp-action="Edit" method="Post">
                <input type="hidden" asp-for="SubjectID" />

                <div class="col-12">
                    <label class="form-label">Subject Name</label>
                    <input asp-for="SubjectName" class="form-control" />
                    <span asp-validation-for="SubjectName" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <label class="form-label">Select Stream Name</label>
                    <select class="form-select" asp-for="SubjectStreamID" asp-items="@ViewBag.Streams">
                        <option> Select Stream</option>
                    </select>
                    <span asp-validation-for="SubjectStreamID" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form><!-- Vertical Form -->

        </div>
    </div>


</div>