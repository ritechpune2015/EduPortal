@model IEnumerable<SubjectStream>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Subject Stream List</h5>
 
        <a class="btn btn-success" asp-action="Create"> Create </a>
        <hr />
        <!-- Bordered Table -->
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Stream Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int srno = 1;
                }
                @foreach(var temp in Model)
                {
                <tr>
                    <th scope="row">@srno</th>
                    <td>@temp.StreamName</td>
                    <td>
                          <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@temp.SubjectStreamID">Edit</a>
                          |
                         <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@temp.SubjectStreamID">Delete</a>
                    </td>
                </tr>
                srno++;
                }
            </tbody>
        </table>
        <!-- End Bordered Table -->

       

    </div>
</div>