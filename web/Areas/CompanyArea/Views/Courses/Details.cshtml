@model Course
<div class="profile-overview">
    <h5 class="card-title">Course Details</h5>
    <div class="row">
        <div class="col-lg-3 col-md-4 label ">Course Name:</div>
        <div class="col-lg-9 col-md-8">@Model.CourseName</div>
    </div>

    <div class="row">
        <div class="col-lg-3 col-md-4 label">Duration in Hours:</div>
        <div class="col-lg-9 col-md-8">@Model.DurationInHours</div>
    </div>

    <div class="row">
        <div class="col-lg-3 col-md-4 label">Course Description:</div>
        <div class="col-lg-9 col-md-8">@Model.CourseDescription</div>
    </div>

    <div class="row">
        <div class="col-lg-3 col-md-4 label">Requirement:</div>
        <div class="col-lg-9 col-md-8">@Model.Prerequisite</div>
    </div>

    <div class="row">
        <div class="col-lg-3 col-md-4 label">Price:</div>
        <div class="col-lg-9 col-md-8">@Model.Price</div>
    </div>

    <div class="row">
        <div class="col-lg-3 col-md-4 label">Subject:</div>
        <div class="col-lg-9 col-md-8">@Model.Subject.SubjectName</div>
    </div>
    <div>

        <img src="@Model.ImageFilePath" width="100" height="100" />
    </div>
    <div>
        <a class="btn btn-primary" asp-action="Index"> Back </a>
    </div>
</div>