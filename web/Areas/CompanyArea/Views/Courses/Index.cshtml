@model IEnumerable<Course>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Course List</h5>
 
        <a class="btn btn-success" asp-action="Create"> Create </a>
        <hr />
        <!-- Bordered Table -->
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th> Course Icon</th>
                    <th> Course Name</th>
                    <th> DurationInHours </th>
                    <th> Price </th>
                    <th scope="col">Suject Name</th>
                    <th scope="col">Stream Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int srno = 1;
                }
                @foreach(var temp in Model)
                {
                <tr>
                    <td scope="row">@srno</td>
                    <td>
                        <img src="@temp.ImageFilePath" width="50" height="50" />
                    </td>
                    <td> @temp.CourseName</td>
                    <td>@temp.DurationInHours</td>
                    <td>@temp.Price</td>
                    <td>@temp.Subject.SubjectName</td>
                    <td>@temp.Subject.Stream.StreamName</td>
                    <td>
                          <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@temp.CourseID">Edit</a>
                          |
                         <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@temp.CourseID">Delete</a>
                          |
                         <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@temp.CourseID">Details</a>
                    </td>
                </tr>
                srno++;
                }
            </tbody>
        </table>
        <!-- End Bordered Table -->

       

    </div>
</div>